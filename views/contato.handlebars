<script>
    document.getElementById("contactForm").addEventListener("submit", function (event) {
        event.preventDefault(); // Evita o envio real do formulário

        var nome = document.getElementById("nome").value;
        var email = document.getElementById("email").value;
        var tel = document.getElementById("tel").value;
        var mens = document.getElementById("mens").value;

        var formData = new FormData();
        formData.append("nome", nome);
        formData.append("email", email);
        formData.append("fone", tel);
        formData.append("mens", mens);

        fetch("processar_formulario.php", {
            method: "POST",
            body: formData
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.querySelector(".confirm").textContent = nome + ", sua mensagem foi enviada com sucesso.";
                } else {
                    document.querySelector(".confirm").textContent = nome + ", não foi possível enviar sua mensagem.";
                }
            })
            .catch(error => {
                document.querySelector(".confirm").textContent = "Erro ao enviar a mensagem.";
            });
    });

    function EnviarWhats() {
        var nome = document.getElementById("nome").value;
        var tel = document.getElementById("tel").value;
        var mens = document.getElementById("mens").value;

        var message = `Nome: ${nome}%0ATelefone: ${tel}%0AMensagem: ${mens}`;
        var url = `https://wa.me/5531XXXXXXX?text=${message}`;
        window.open(url, "_blank");
    }
</script>